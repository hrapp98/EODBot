modules = ["nodejs-20", "python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Flask Server"

[[workflows.workflow]]
name = "Flask Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn app:app --bind 0.0.0.0:5000 --workers 1 --threads 2 --worker-class gthread --worker-connections 50 --timeout 120 --keep-alive 5 --log-level debug --preload --graceful-timeout 30"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "gunicorn app:app --bind 0.0.0.0:3000 --workers 1 --threads 2 --worker-class gthread --worker-connections 50 --timeout 120 --keep-alive 5"]

[[ports]]
localPort = 3000
externalPort = 80

[env]
PYTHONUNBUFFERED = "1"
